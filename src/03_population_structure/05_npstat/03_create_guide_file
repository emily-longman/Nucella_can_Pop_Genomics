#### Create guide file for array

#--------------------------------------------------------------------------------

# Define important file locations

# WORKING_FOLDER is the core folder where this pipeline is being run.
WORKING_FOLDER=/gpfs2/scratch/elongman/Nucella_can_Pop_Genomics/data/processed

# This is the location where the reference genome is stored.
REFERENCE_FOLDER=/netfiles/pespenilab_share/Nucella/processed/Base_Genome/Base_Genome_Oct2024/Crassostrea_softmask

# This is the path to the reference genome.
REFERENCE=$REFERENCE_FOLDER/N.canaliculata_assembly.fasta.softmasked.fa

#--------------------------------------------------------------------------------

# Get list of scaffold names
 
# Change directory
cd $WORKING_FOLDER/pop_gen/guide_files

# Get all of the scaffold/contig names 
grep ">" $REFERENCE > npstat_scaffold_names.txt

# Get rid of the ">"
sed -i 's/>//g' npstat_scaffold_names.txt

#--------------------------------------------------------------------------------

# Modify in R
module load R/4.4.1  
R

install.packages(c('data.table', 'tidyverse', 'groupdata2'))

library(data.table)
library(tidyverse)
library(groupdata2)

#--------------------------------------------------------------------------------

data <- fread("npstat_scaffold_names.txt", header = F)

group(data, n=50, method = "greedy") -> npstat_scaffold_guide_file_array

write.table(npstat_scaffold_guide_file_array, "npstat_scaffold_guide_file_array.txt", col.names = F, row.names = F, quote = F)

# Note guide_file_array has dimensions:  18919, 2 

q()